#!/bin/sh

for folder in "build" "config" "src"; do
  if [ ! -d "$1/$folder" ]; then
    exit 1
  fi
done

for file in "package.json" "index.html"; do
  if [ ! -f "$1/$file" ]; then
    exit 1
  fi
done

cat package.json | grep -Pwoqe "\"vue\"\:\s?\".*\"\,?"

if [ $? != 0 ]; then
  exit $?
fi

echo "Detected VueJS project"
exit 0