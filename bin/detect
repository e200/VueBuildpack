#!/bin/sh

for folder in "build" "config" "src"; do
  if [ ! -d $folder ]; then
    exit 1
  fi
done

for file in "package.json" "index.html"; do
  if [ ! -f $file ]; then
    exit 1
  fi
done

cat package.json | grep -Pwoqe "\"vue\"\:\s?\".*\"\,?"

if [ $? != 0 ]; then
  exit $?
fi

echo "VueJS project"
exit 0