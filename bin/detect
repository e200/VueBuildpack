#!/usr/bin/env bash

for F in build config src; do
  if [ ! -d $1/$F ]; then
    exit 1
  fi
done

for F in package.json index.html; do
  if [ ! -f $1/$F ]; then
    exit 1
  fi
done

#cat package.json | grep -Pwoqe "\"vue\"\:\s?\".*\"\,?"

#if [ $? != 0 ]; then
#  exit $?
#fi

echo "Detected VueJS project"
exit 0